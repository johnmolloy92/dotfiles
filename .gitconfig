[user]
  name = jmolloy
  email = jmolloy@ptc.com

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = yellow
  untracked = cyan

[push]
  default = current

[alias]
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  pl = pull --rebase
  cl = clean --force

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f

[core]
  editor = vim
